<% include ./partials/header %>

<div class="container main">
    <header class="jumbotron">
        <div class="container -fluid">
         <h1>Yelpcamp Campgrounds </h1>
         <p>this is about list of yelpcamp campgrounds!!</p>
         <p>
         <a class="ui purple basic button" href="/campgrounds/new"> add new campgrounds </a>
         </p>
         <p>
             <form action="/campgrounds" method="GET" class="form-inline">
                 <div class="form-group">
                     <input type="text" name="search" placeholder="campgrounds search..."class="form-control" > 
                     <span class="content1"><input type="submit" value="Search" class="ui green basic button"></span>
                 </div>
             </form>
         </p>
        </div>
    </header>
   <div class="row">
       <div class="col-md-12">
           <% if(noMatch!== undefined) { %>
           <h3><%= noMatch %></h3>
           <% } %>
       </div>
      <% Campgrounds.forEach(function(campgrounds){ %>
      <div class="col-sm-4">
        <div class="img-thumbnail">
           <img src="<%= campgrounds.image %>">
           <div class="caption">
               <h4><strong><%= campgrounds.name %></strong></h4> 
           </div>
            <p><%- campgrounds.description.substring(0,100) %>.....</p>
            <p >
               <a href="/campgrounds/<%= campgrounds._id %>" class="ui purple basic button">More Info</a>
            </p>
        </div>
     </div>
     <% }) %>
     
    
</div>
</div>

  

<% include ./partials/footer %>